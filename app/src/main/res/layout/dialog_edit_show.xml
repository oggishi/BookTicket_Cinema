<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"> <!-- Background màu cam nhạt -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <EditText
            android:id="@+id/dateStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày chiếu"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- RecyclerView để hiển thị danh sách các startTime -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <ImageButton
            android:id="@+id/btnAddTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_add"
            android:layout_marginBottom="24dp"
            android:layout_gravity="end"/>

        <Spinner
            android:id="@+id/spinnerGenreSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="16dp" />
        <Spinner
            android:id="@+id/spinnerGenreRap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>

